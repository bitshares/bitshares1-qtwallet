#ifdef WIN64
#define PLATFORM  "x64"
#define PLATFORM_NAME  "x64"
#define PLATFORM_TITLE " (64-bit)"
#else
#define PLATFORM  "x86"
#define PLATFORM_NAME  "x86"
#define PLATFORM_TITLE ""
#endif

;#define VERSION "@VERSION_MAJOR@.@VERSION_MINOR@.@VERSION_PATCH@"
#define VERSION "0.0.1"

[Setup]
AppPublisher=DACSunlimited
AppPublisherURL=http://dacsunlimited.com
AppVersion={#VERSION}
AppName={#APPNAME}{#PLATFORM_TITLE}
AppVerName={#APPNAME}{#PLATFORM_TITLE} {#VERSION}
DefaultDirName={pf}\{#APPNAME}
DefaultGroupName={#APPNAME}
Compression=lzma/Ultra
SolidCompression=true
VersionInfoVersion={#VERSION}
VersionInfoCompany=BitShares
VersionInfoDescription={#APPNAME}
AppCopyright=(c) 2014 DACSunlimited
DirExistsWarning=no
DisableStartupPrompt=true
WindowVisible=false
AppSupportURL=http://bitshares-x.info
AppUpdatesURL=http://bitshares-x.info
;AppReadmeFile={app}\README.TXT
ShowLanguageDialog=no
LanguageDetectionMethod=none
AppID=68ad7005-8eee-49c9-95ce-9eed97e5b347
RestartIfNeededByRun=false
DisableFinishedPage=false
DisableProgramGroupPage=true
DisableReadyPage=true
OutputDir=.
OutputBaseFilename={#APPNAME}-{#VERSION}
WizardImageFile=@CMAKE_CURRENT_SOURCE_DIR@/images/inno_setup_img.bmp
#ifdef WIN64
ArchitecturesAllowed=x64
ArchitecturesInstallIn64BitMode=x64
#endif

[Tasks]
;Name: desktopicon; Description: Create a &desktop icon; GroupDescription: Additional icons:; Flags: checkedonce

[CustomMessages]


